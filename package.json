        "@types/sha256": "^0.2.0",
        "@types/styled-components": "5.0.1",
        "@types/tinycolor2": "^1.4.2",
        "@types/usb": "^1.5.1",
        "concurrently": "^5.2.0",
        "electron": "10.1.3",
        "electron-builder": "^22.6.0",
        "electron-packager": "^14.2.1",
        "globby": "^11.0.0",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.2.0",
        "gulp-uglify-es": "^1.0.4",
        "less": "^3.11.1",
